    <main>
        <section id="products" class="container">
            <h2>Our Products</h2>
            <div class="product-grid">

                <% for(let i = 0; i < product.length; i++){ %>
                    <div class="product-card">
                       <a href="/product/<%= product[i]._id %>">
                        <img src="/uploads/<%= product[i].img %>" alt="<%= product[i].name%>">
