.product-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
}

.product-card {
    border: 1px solid #ddd;
    padding: 1rem;
    width: calc(33.333% - 2rem);
    box-sizing: border-box;
}

